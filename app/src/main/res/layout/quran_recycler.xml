<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    tools:context=".Dashboard_Quran">

    <LinearLayout
        android:id="@+id/card_surrah_quran"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:background="@drawable/card_white"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/icon_ayah_surrah"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_stariconmaincolor"
            tools:ignore="MissingConstraints"
            android:gravity="center|center_vertical"
            android:layout_marginRight="25dp">

            <TextView
                android:id="@+id/text_num_surrah"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="200"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/main_color"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/text_name_surrah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surat Quran"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/main_color"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_from_surrah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Madinah"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/second_color"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/text_strip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- "
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/second_color"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/text_ayah_surrah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="286"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/second_color"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/text_ayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayat"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/second_color"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/text_nameArab_surrah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البقرة"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/main_color"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>